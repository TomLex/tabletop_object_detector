<launch>
	<!-- This launch file starts, segmentation, recognition. and the database communication node. -->

	<!-- load the database parameters -->
	<rosparam command="load" file="$(find household_objects_database)/config/localhost.yaml"/>
	<!-- start the database wrapper node -->
    <node pkg="household_objects_database" name="objects_database_node" type="objects_database_node" 
	respawn="true" output="screen"/>

    <arg name="flatten_table" default="false"/>	
    <arg name="model_set" default="DIPLOMA_SET"/>
	<arg name="tabletop_segmentation_points_input" default="camera/depth/points" />

	<!-- WHEN RECORDING FROM ROBOT SET TO TRUE, ELSE FALSE -->
    <arg name="convert_to_base_link" default="false" />

	<!-- segmentation -->
	<include file="$(find tabletop_object_detector)/launch/tabletop_segmentation.launch">
	  <arg name="tabletop_segmentation_points_in" value="$(arg tabletop_segmentation_points_input)" />
	  <arg name="flatten_table" value="$(arg flatten_table)"/>
	  <arg name="tabletop_segmentation_convert_to_base_link" value="$(arg convert_to_base_link)" />
	</include>

	<!-- object recognition -->
	<include file="$(find tabletop_object_detector)/launch/tabletop_object_recognition.launch">
    	<arg name="model_set" value="$(arg model_set)" />
    </include>
	
</launch>